<h2>Hello {{user.name}}!</h2>
<hr>
{{#if }}
<h3>insert your food item </h3>
<div class="card-columns">
  {{#each}}
  <div class="favs" id={{this.id}}>
    <div class="card mt-2">
      <img src="{{this.imageSrc}}" alt="Menu Item image unavailable" class="card-img-top img-thumbnail rounded">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">
          <a href="{{this.id}} target=" _blank"">{{this.id}}</a>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}

{{/if}}

