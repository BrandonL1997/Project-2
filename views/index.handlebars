<h2>Hello {{user.name}}!</h2>
<hr>
{{#if menuItem.favorites}}
  <h3>Your Favorite menuItem</h3>
  <div class="card-columns">
   {{#each menuItem.favorites}}
    <div class="favs" id={{this.id}}>
      <div class="card mt-2">
        <img src="{{this.imageSrc}}" alt="Menu Item image unavailable" class="card-img-top img-thumbnail rounded">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <a href="{{this.description}} target="_blank"">{{this.description}}</a>
          </p>
        </div>
      </div>
    </div>
   {{/each}}
  </div>
{{else}}
{{/if}}

<hr>
{{#if menuItem.recommend}}
  <h3>Recommended menuItem</h3>
  <div class="card-columns">
   {{#each menuItem.recommend}}
    <div class="favs" id={{this.id}}>
      <div class="card mt-2">
        <img src="{{this.imageSrc}}" alt="Menu Item image unavailable" class="card-img-top img-thumbnail rounded">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <a href="{{this.description}}" target="_blank">{{this.description}}</a>
          </p>
        </div>
      </div>
    </div>
   {{/each}}
  </div>
{{/if}}

<hr>
{{#if menuItem.posted}}
  <h3>menuItem You Have Posted</h3>
  <div class="card-columns">
    {{#each menuItem.posted}}
      <div class="favs" id={{this.id}}>
        <div class="card mt-2">
          <img class="card-img-top" src="{{this.imageSrc}}" alt="Menu Item image unavailable">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">
              <a href="{{this.description}}" target="_blank">{{this.description}}</a>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h4>You haven't posted any Menu Item</h4>
{{/if}}

<script src="/public/js/menuitem.js"></script>
