<h2>Hello {{user.name}}!</h2>
<hr>
{{#if }}
  <h3>insert your food item</h3>
  <div class="card-columns">
   {{#each}}
    <div class="favs" id={{this.id}}>
      <div class="card mt-2">
        <img src="{{this.imageSrc}}" alt="recipe image unavailable" class="card-img-top img-thumbnail rounded">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <a href="{{this.}} target="_blank"">{{this.}}</a>
          </p>
        </div>
      </div>
    </div>
   {{/each}}
  </div>
{{else}}

{{/if}}

<hr>
{{#if}}
  <h3>Recommended Recipes</h3>
  <div class="card-columns">
   {{#each recipes.recommend}}
    <div class="favs" id={{this.id}}>
      <div class="card mt-2">
        <img src="{{this.imageSrc}}" alt="recipe image unavailable" class="card-img-top img-thumbnail rounded">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <a href="{{this.}}" target="_blank">{{this.}}</a>
          </p>
        </div>
      </div>
    </div>
   {{/each}}
  </div>
{{/if}}

<hr>
{{if}}
  <h3>Recipes You Have Posted</h3>
  <div class="card-columns">
    {{#each}}
      <div class="favs" id={{this.id}}>
        <div class="card mt-2">
          <img class="card-img-top" src="{{this.}}" alt="image unavailable">
          <div class="card-body">
            <h5 class="card-title">{{this.}}</h5>
            <p class="card-text">
              <a href="{{this.}}" target="_blank">{{this.}}</a>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
